{
  "config": {
    "name": "Baidu News",
    "url_template": "/s?rtt=1&bsst=1&cl=2&tn=news&ie=utf-8&word={kw}&pn={offset}&rn={number}",
    "pagination_type": "offset",
    "pagination_param": "offset",
    "wait_for": "#content_left",
    "browser_type": "chromium",
    "headless": true,
    "page_timeout": 60000,
    "max_results_per_page": 50
  },
  "schema": {
    "base_selector": "#content_left .result-op.c-container",
    "fields": [
      {
        "name": "site_name",
        "selector": "a[class^='source-link_']",
        "type": "text"
      },
      {
        "name": "title",
        "selector": "h3 a",
        "type": "text"
      },
      {
        "name": "url",
        "selector": "h3 a[href]",
        "type": "attribute",
        "attribute": "href"
      },
      {
        "name": "summary",
        "selector": ".c-row .c-span-last span.c-color-text",
        "type": "text"
      },
      {
        "name": "publish_date",
        "selector": ".c-row .c-span-last span.c-color-gray2",
        "type": "text"
      }
    ]
  }
}