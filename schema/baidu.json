{
  "config": {
    "name": "Baidu Search",
    "url_template": "/s?wd={kw}&pn={offset}&rn={number}&ie=utf-8&rsv_spt=1&rsv_bp=1&rsv_idx=2&rsv_enter=1&rsv_btype=i&tn=baiduhome_pg&inputT={rand}",
    "pagination_type": "offset",
    "pagination_param": "offset",
    "wait_for": "#content_left",
    "browser_type": "chromium",
    "headless": true,
    "page_timeout": 60000,
    "max_results_per_page": 50
  },
  "schema": {
    "base_selector": "#content_left .result.c-container",
    "fields": [
      {
        "name": "site_name",
        "selector": "a[class^='siteLink_']",
        "type": "text"
      },
      {
        "name": "title",
        "selector": "h3 a",
        "type": "text"
      },
      {
        "name": "url",
        "selector": "h3 a[href]",
        "type": "attribute",
        "attribute": "href"
      },
      {
        "name": "summary",
        "selector": "span[class^='content-right_']",
        "type": "text"
      }
    ]
  }
}